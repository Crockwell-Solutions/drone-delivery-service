{
  "name": "drone-delivery-service",
  "version": "0.1.0",
  "bin": {
    "drone-delivery-service": "bin/drone-delivery-service-backend.ts"
  },
  "scripts": {
    "build": "tsc",
    "build:esbuild": "node_modules/.bin/esbuild --bundle src/**/*.ts --outbase=src/ --outdir=dist/ --sourcemap=inline --platform=node",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "synth": "cdk synth --all",
    "deploy": "npm run deploy:backend && npm run deploy:frontend",
    "deploy:backend": "cdk deploy --all --require-approval never",
    "deploy:frontend": "npm --prefix frontend run build && cdk deploy --app='npx ts-node --prefer-ts-exts bin/drone-delivery-service-frontend.ts' --require-approval never",
    "destroy": "cdk destroy --app='npx ts-node --prefer-ts-exts bin/drone-delivery-service-frontend.ts && cdk destroy --all",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:unit": "jest",
    "preprocess": "ts-node resources/seed-data/preprocess-data.ts"
  },
  "devDependencies": {
    "@aws-lambda-powertools/logger": "^2.21.0",
    "@aws-sdk/client-dynamodb": "^3.830.0",
    "@aws-sdk/client-s3": "^3.832.0",
    "@aws-sdk/client-ssm": "^3.830.0",
    "@aws-sdk/lib-dynamodb": "^3.830.0",
    "@aws-sdk/util-dynamodb": "^3.830.0",
    "@eslint/js": "^9.29.0",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.5.0",
    "@types/aws-lambda": "^8.10.150",
    "@types/jest": "^30.0.0",
    "@types/ngeohash": "^0.6.8",
    "@types/node": "24.0.3",
    "@types/proj4": "^2.5.6",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/parser": "^8.34.1",
    "axios": "^1.10.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "geolib": "^3.3.4",
    "geotiff": "^2.1.4-beta.0",
    "globals": "^16.2.0",
    "jest": "^30.0.2",
    "ngeohash": "^0.6.3",
    "prettier": "^3.5.3",
    "proj4": "^2.17.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "xml2js": "^0.6.2"
  },
  "dependencies": {
    "aws-cdk": "2.1018.1",
    "aws-cdk-lib": "2.201.0",
    "constructs": "^10.4.2"
  }
}
